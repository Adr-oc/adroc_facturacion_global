<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_liquidacion_gastos_wizard_form" model="ir.ui.view">
        <field name="name">liquidacion.gastos.wizard.form</field>
        <field name="model">liquidacion.gastos.wizard</field>
        <field name="arch" type="xml">
            <form string="Liquidaci贸n de Gastos de Importaci贸n">
                <sheet>
                    <!-- Formato de Reporte -->
                    <group>
                        <group string="Formato de Reporte">
                            <field name="report_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group string="Embarques Incluidos">
                            <field name="shipment_ids" nolabel="1" readonly="1" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <!-- Facturas Seleccionadas -->
                    <notebook>
                        <page string="Facturas Seleccionadas" name="invoices">
                            <field name="invoice_ids" nolabel="1" readonly="1">
                                <list>
                                    <field name="mrdc_shipment_id" string="Embarque"/>
                                    <field name="name" string="Factura"/>
                                    <field name="partner_id" string="Cliente"/>
                                    <field name="invoice_date" string="Fecha"/>
                                    <field name="amount_total" string="Total" sum="Total"/>
                                    <field name="currency_id" string="Mon."/>
                                </list>
                            </field>
                        </page>

                        <page string="Adjuntos" name="attachments" invisible="report_type == 'assukargo'">
                            <div class="mb-3">
                                <button name="action_select_all"
                                        string="Seleccionar Todos"
                                        type="object"
                                        class="btn-secondary me-2"
                                        icon="fa-check-square-o"/>
                                <button name="action_deselect_all"
                                        string="Deseleccionar Todos"
                                        type="object"
                                        class="btn-secondary"
                                        icon="fa-square-o"/>
                            </div>

                            <field name="available_attachment_ids" invisible="1"/>
                            <field name="attachment_ids" invisible="1"/>
                            <field name="attachment_line_ids" nolabel="1">
                                <list editable="bottom" default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="include" widget="boolean_toggle" string="Incluir"/>
                                    <field name="shipment_name" readonly="1" string="Embarque"/>
                                    <field name="origin_type" readonly="1" string="Tipo"/>
                                    <field name="origin_name" readonly="1" string="Registro"/>
                                    <field name="name" readonly="1" string="Archivo"/>
                                    <field name="mimetype" readonly="1" optional="hide" string="Formato"/>
                                    <field name="attachment_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <!-- Mensaje para Assukargo -->
                    <group invisible="report_type != 'assukargo'">
                        <div class="alert alert-info" role="alert">
                            <i class="fa fa-info-circle"/> <strong>Formato Assukargo:</strong> Este formato no incluye documentos adjuntos ni la columna Referencia 3.
                        </div>
                    </group>
                </sheet>

                <footer>
                    <button name="action_print_report"
                            string="Generar Reporte"
                            type="object"
                            class="btn-primary"
                            icon="fa-print"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard - replaces direct report -->
    <record id="action_liquidacion_gastos_wizard" model="ir.actions.act_window">
        <field name="name">Liquidaci贸n de Gastos de Importaci贸n</field>
        <field name="res_model">liquidacion.gastos.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
