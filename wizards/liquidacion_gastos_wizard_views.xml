<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_liquidacion_gastos_wizard_form" model="ir.ui.view">
        <field name="name">liquidacion.gastos.wizard.form</field>
        <field name="model">liquidacion.gastos.wizard</field>
        <field name="arch" type="xml">
            <form string="Liquidaci贸n de Gastos de Importaci贸n">

                <group>
                    <group string="Embarques">
                        <field name="shipment_ids" readonly="1" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group string="Facturas seleccionadas">
                        <field name="invoice_ids" nolabel="1" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="amount_total"/>
                                <field name="currency_id"/>
                            </list>
                        </field>
                    </group>
                </group>

                <group string="Seleccionar Adjuntos a Incluir">
                    <div class="mb-3">
                        <button name="action_select_all"
                                string="Seleccionar Todos"
                                type="object"
                                class="btn-secondary me-2"/>
                        <button name="action_deselect_all"
                                string="Deseleccionar Todos"
                                type="object"
                                class="btn-secondary"/>
                    </div>

                    <group>
                        <field name="available_attachment_ids" invisible="1"/>
                        <field name="attachment_ids"
                            string="Adjuntos a incluir en el reporte"
                            widget="many2many_checkboxes"
                            domain="[('id', 'in', available_attachment_ids)]"
                            options="{'no_create': True}"/>
                    </group>
                </group>

                <footer>
                    <button name="action_print_report"
                            string="Generar Reporte"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard - replaces direct report -->
    <record id="action_liquidacion_gastos_wizard" model="ir.actions.act_window">
        <field name="name">Liquidaci贸n de Gastos de Importaci贸n</field>
        <field name="res_model">liquidacion.gastos.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
