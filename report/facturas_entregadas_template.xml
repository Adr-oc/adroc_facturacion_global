<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_facturas_entregadas">
        <t t-call="web.html_container">
            <t t-foreach="partners_data" t-as="pdata">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <!-- Header Title -->
                        <div class="text-center" style="margin-bottom: 15px;">
                            <h3 style="color: #2c5282; font-weight: bold; margin: 0;">
                                DETALLE DE FACTURAS ENTREGADAS
                            </h3>
                        </div>

                        <!-- Partner Name -->
                        <div style="margin-bottom: 12px;">
                            <span style="color: #c6a700; font-weight: bold; font-size: 14px;">
                                <t t-esc="pdata['partner'].name"/>
                            </span>
                        </div>

                        <!-- Leyenda de colores por empresa -->
                        <div style="margin-bottom: 10px; font-size: 10px;">
                            <t t-set="company_colors" t-value="{}"/>
                            <t t-set="color_palette" t-value="['rgba(200, 230, 255, 0.7)', 'rgba(255, 230, 200, 0.7)', 'rgba(200, 255, 200, 0.7)', 'rgba(255, 200, 255, 0.7)', 'rgba(255, 255, 200, 0.7)']"/>
                            <t t-set="color_idx" t-value="0"/>
                            <t t-foreach="pdata['companies']" t-as="comp">
                                <t t-set="company_colors" t-value="dict(list(company_colors.items()) + [(comp.id, color_palette[color_idx % len(color_palette)])])"/>
                                <span style="margin-right: 15px;">
                                    <span t-attf-style="display: inline-block; width: 15px; height: 15px; background-color: #{color_palette[color_idx % len(color_palette)]}; border: 1px solid #999; vertical-align: middle; margin-right: 5px;"></span>
                                    <t t-esc="comp.name"/>
                                </span>
                                <t t-set="color_idx" t-value="color_idx + 1"/>
                            </t>
                        </div>

                        <!-- Single Main Table -->
                        <table class="table table-sm table-bordered" style="font-size: 11px; margin-top: 15px;">
                            <thead>
                                <tr style="background-color: #f8f9fa;">
                                    <th style="padding: 5px;">NO.</th>
                                    <th style="padding: 5px;">Empresa</th>
                                    <th style="padding: 5px;">F.Envio</th>
                                    <th style="padding: 5px;">Fecha</th>
                                    <th style="padding: 5px;">No. FEL</th>
                                    <th style="padding: 5px;">Numero</th>
                                    <th style="padding: 5px;">Mon</th>
                                    <th style="padding: 5px; text-align: right;">Total</th>
                                    <th style="padding: 5px;">Serie CA</th>
                                    <th style="padding: 5px;">No. Fact CA</th>
                                    <th style="padding: 5px;">Ref 1</th>
                                    <th style="padding: 5px;">Ref 2</th>
                                    <th style="padding: 5px;">Embarque</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="row_number" t-value="0"/>
                                <t t-foreach="pdata['groups']" t-as="group">
                                    <t t-foreach="group['invoices']" t-as="invoice">
                                        <t t-set="row_number" t-value="row_number + 1"/>
                                        <t t-set="row_color" t-value="company_colors.get(invoice.company_id.id, 'transparent')"/>
                                        <tr t-attf-style="background-color: #{row_color};">
                                            <td style="padding: 4px;"><t t-esc="row_number"/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.company_id.name"/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.date_sent" t-options='{"widget": "date"}'/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.invoice_date" t-options='{"widget": "date"}'/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.x_studio_nmero_de_dte or ''"/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.name"/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.currency_id.name"/></td>
                                            <td style="padding: 4px; text-align: right;">
                                                <t t-esc="invoice.amount_total" t-options='{"widget": "float", "precision": 2}'/>
                                            </td>
                                            <!-- Serie CA y No. Fact CA solo para Cuenta Ajena -->
                                            <td style="padding: 4px;">
                                                <t t-if="invoice.mrdc_expense_external_account_id">
                                                    <t t-esc="invoice.mrdc_expense_external_account_id.invoice_series or ''"/>
                                                </t>
                                            </td>
                                            <td style="padding: 4px;">
                                                <t t-if="invoice.mrdc_expense_external_account_id">
                                                    <t t-esc="invoice.mrdc_expense_external_account_id.invoice_number or ''"/>
                                                </t>
                                            </td>
                                            <td style="padding: 4px;"><t t-esc="invoice.mrdc_shipment_ref_1 or ''"/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.mrdc_shipment_ref_2 or ''"/></td>
                                            <td style="padding: 4px;"><t t-esc="invoice.mrdc_shipment_id.name or ''"/></td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <!-- Totals Row -->
                        <table class="table table-sm table-bordered" style="font-size: 11px; margin-top: 15px;">
                            <tbody>
                                <tr style="background-color: #f8f9fa; font-weight: bold;">
                                    <td style="width: 50%; padding: 6px;"></td>
                                    <td style="padding: 6px;">Cuenta Ajena</td>
                                    <td style="padding: 6px; text-align: right;">
                                        <t t-esc="pdata['totals']['cuenta_ajena']" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="padding: 6px;">Honorarios</td>
                                    <td style="padding: 6px; text-align: right;">
                                        <t t-esc="pdata['totals']['honorarios']" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="padding: 6px;">TOTAL</td>
                                    <td style="padding: 6px; text-align: right;">
                                        <t t-esc="pdata['totals']['total']" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Signature -->
                        <div style="margin-top: 25px; font-size: 11px;">
                            <p style="margin: 0;">
                                <strong>Firma quien recibe:</strong>
                                ___________________________________________
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
